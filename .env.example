# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# n8n Webhook Integration
# API key used to authenticate webhooks from n8n workflows
# n8n will send this key in the x-api-key header when posting emails to /api/n8n/webhook
N8N_WEBHOOK_API_KEY="your-n8n-webhook-api-key-here"

# Auth Providers
# Email/Password authentication is now the primary method
# OAuth providers have been removed in favor of n8n workflow integration

# OpenAI (for embedding-based suggestions - optional)
OPENAI_API_KEY="your-openai-api-key"

# Claude API (Anthropic) for Agent AI
ANTHROPIC_API_KEY="sk-ant-..."

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED="false"

# Feature Flags
ENABLE_EMBEDDING_ENGINE="false"
ENABLE_AGENT="true"
ENABLE_RAG="true"
ENABLE_STREAMING="true"

# Agent Configuration
AGENT_MAX_ITERATIONS="5"
CONVERSATION_SUMMARY_THRESHOLD="8000"

# RAG Configuration
RAG_KNOWLEDGE_BASE_TOP_K="5"
RAG_HISTORICAL_CASES_TOP_K="10"
RAG_MIN_SIMILARITY="0.75"

# Model Selection
DEFAULT_FAST_MODEL="claude-3-5-haiku-20241022"
DEFAULT_QUALITY_MODEL="claude-3-5-sonnet-20241022"
EMBEDDING_MODEL="text-embedding-3-small"

# Cost Tracking (USD per 1K tokens)
CLAUDE_HAIKU_INPUT_COST="0.00025"
CLAUDE_HAIKU_OUTPUT_COST="0.00125"
CLAUDE_SONNET_INPUT_COST="0.003"
CLAUDE_SONNET_OUTPUT_COST="0.015"

# External Database (SQL Server) - For Agent to query real business data
EXTERNAL_DB_SERVER="your-server.database.windows.net"
EXTERNAL_DB_DATABASE="your_database_name"
EXTERNAL_DB_USER="readonly_user"
EXTERNAL_DB_PASSWORD="your_secure_password"
