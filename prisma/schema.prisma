// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  role          String    @default("user") // user | admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // User preferences
  groupThreads  Boolean   @default(false) // Agrupar emails del mismo hilo
  visibleFolders String?  @db.Text // JSON array of visible folder IDs

  sessions Session[]
  emails   Email[]
  tags     Tag[]
  folders  Folder[]

  // Agent AI relations
  cases               Case[]
  conversations       AgentConversation[]
  feedback            AgentFeedback[]
  knowledgeDocuments  KnowledgeDocument[]
  metrics             AgentMetrics[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App Models
model Email {
  id              String    @id @default(cuid())
  messageId       String    @unique // Microsoft Graph message ID or demo ID
  userId          String
  folderId        String?   // Folder this email belongs to
  folderPath      String?   // Full folder path (e.g., "Inbox/Subfolder")
  subject         String
  from            String
  fromEmail       String
  to              String
  cc              String?
  receivedAt      DateTime
  bodyPreview     String?
  bodyText        String?
  bodyHtml        String?
  isRead          Boolean   @default(false)
  hasAttachments  Boolean   @default(false) // Indica si el correo tiene archivos adjuntos
  status          String    @default("New") // New | Active | Resolved | Closed
  priority        String?   // low | medium | high | urgent
  resolutionNotes String?   // Notas de cómo se resolvió (para que el agente aprenda)
  categories      String?   // JSON array of labels/categories
  conversationId  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Agent AI fields
  hasCase         Boolean   @default(false)
  embedding       Unsupported("vector(1536)")?  // OpenAI ada-002 embeddings (1536 dimensions)

  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder Folder?    @relation(fields: [folderId], references: [id], onDelete: SetNull)
  tags   EmailTag[]

  // Agent AI relations
  case            Case?
  conversations   AgentConversation[]
  feedback        AgentFeedback[]

  @@index([userId, receivedAt])
  @@index([messageId])
  @@index([status])
  @@index([conversationId])
  @@index([userId, conversationId])
  @@index([folderId])
  @@index([userId, folderId])
  // Índices críticos para optimización
  @@index([userId, status, receivedAt])  // Dashboard con filtros
  @@index([userId, isRead])              // Contador de no leídos
  @@index([userId, hasCase])             // Vista de casos
}

model Tag {
  id        String     @id @default(cuid())
  userId    String
  name      String
  color     String     // Hex color code (e.g., "#FF5733")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails EmailTag[]

  @@unique([userId, name]) // Each user can have unique tag names
  @@index([userId])
}

model EmailTag {
  emailId String
  tagId   String

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([emailId, tagId])
  @@index([emailId])
  @@index([tagId])
}

model Folder {
  id           String   @id @default(cuid())
  userId       String
  folderId     String   @unique // Microsoft Graph folder ID
  displayName  String
  parentFolderId String? // Microsoft Graph parent folder ID
  folderPath   String   // Full path (e.g., "Inbox/Subfolder")
  totalCount   Int      @default(0)
  unreadCount  Int      @default(0)
  isVisible    Boolean  @default(true) // User preference
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails Email[]

  @@unique([userId, folderId])
  @@index([userId])
  @@index([userId, isVisible])
  @@index([parentFolderId])
}

model AppSettings {
  id                      String   @id @default(cuid())
  key                     String   @unique
  value                   String   // JSON value
  description             String?
  updatedAt               DateTime @updatedAt
}

model SystemHealth {
  id              String   @id @default(cuid())
  isHealthy       Boolean  @default(true)
  lastCheckAt     DateTime @default(now())
  lastErrorAt     DateTime?
  lastErrorMessage String?
  consecutiveFailures Int  @default(0)
  updatedAt       DateTime @updatedAt
}

model HealthCheckLog {
  id              String   @id @default(cuid())
  timestamp       DateTime @default(now())
  isHealthy       Boolean
  responseTime    Int?     // milliseconds
  errorMessage    String?
  checkType       String   @default("database") // database, api, etc

  @@index([timestamp])
}

// ===============================================
// AGENT AI MODELS
// ===============================================

// Casos resueltos históricos
model Case {
  id          String    @id @default(cuid())
  userId      String
  emailId     String    @unique
  title       String
  description String?   @db.Text
  resolution  String?   @db.Text
  response    String?   @db.Text
  tags        String?   // JSON array
  priority    String?   @default("medium")
  status      String    @default("open")
  category    String?
  embedding   Unsupported("vector(1536)")?  // OpenAI ada-002 embeddings (1536 dimensions)
  resolvedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([resolvedAt])
  @@index([category])
  // Índice crítico para analytics de resolución
  @@index([userId, resolvedAt])
}

// Conversaciones del agente
model AgentConversation {
  id               String    @id @default(cuid())
  emailId          String
  userId           String
  sessionId        String
  summary          String?   @db.Text
  tokenCount       Int       @default(0)
  lastSummarizedAt DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  email    Email          @relation(fields: [emailId], references: [id], onDelete: Cascade)
  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages AgentMessage[]

  @@index([emailId])
  @@index([userId, updatedAt])
  @@index([sessionId])
}

// Mensajes de conversación
model AgentMessage {
  id              String    @id @default(cuid())
  conversationId  String
  role            String    // user | assistant | system | tool
  content         String    @db.Text
  embedding       Unsupported("vector(1536)")?  // OpenAI ada-002 embeddings (1536 dimensions)
  tokenCount      Int?
  model           String?
  confidence      Float?
  responseTimeMs  Int?
  toolCalls       String?   @db.Text  // JSON array de tool calls
  metadata        String?   @db.Text  // JSON metadata
  createdAt       DateTime  @default(now())

  conversation AgentConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([role])
  // Índice crítico para RAG retrieval
  @@index([conversationId, role, createdAt])
}

// Base de conocimientos (documentación técnica)
model KnowledgeDocument {
  id          String   @id @default(cuid())
  userId      String
  title       String
  content     String   @db.Text
  category    String?
  tags        String?  // JSON array
  embedding   Unsupported("vector(1536)")?  // OpenAI ada-002 embeddings (1536 dimensions)
  language    String?  @default("es")
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  source      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  chunks KnowledgeChunk[]

  @@index([userId, category])
  @@index([isPublished])
  @@index([category])
}

// Chunks de documentos (para RAG eficiente)
model KnowledgeChunk {
  id          String   @id @default(cuid())
  documentId  String
  content     String   @db.Text
  chunkIndex  Int
  embedding   Unsupported("vector(1536)")?  // OpenAI ada-002 embeddings (1536 dimensions)
  tokenCount  Int?
  metadata    String?  @db.Text  // JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  document KnowledgeDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, chunkIndex])
}

// Caché de embeddings
model EmbeddingCache {
  id         String   @id @default(cuid())
  textHash   String   @unique
  embedding  Unsupported("vector(1536)")  // OpenAI ada-002 embeddings (1536 dimensions)
  model      String
  createdAt  DateTime @default(now())

  @@index([textHash])
}

// Métricas del agente
model AgentMetrics {
  id              String   @id @default(cuid())
  conversationId  String?
  userId          String
  model           String
  inputTokens     Int
  outputTokens    Int
  cost            Float
  responseTimeMs  Int
  toolsUsed       String?  @db.Text  // JSON array
  ragSources      String?  @db.Text  // JSON array
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([conversationId])
}

// Feedback del usuario sobre sugerencias
model AgentFeedback {
  id                 String    @id @default(cuid())
  userId             String
  emailId            String?
  conversationId     String?
  messageId          String?
  feedbackType       String    // suggestion_accepted | suggestion_rejected | rating | correction
  originalSuggestion String?   @db.Text
  userChoice         String?   @db.Text
  rating             Int?
  comment            String?   @db.Text
  metadata           String?   @db.Text
  createdAt          DateTime  @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  email Email? @relation(fields: [emailId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([feedbackType])
  @@index([emailId])
}
